struct COORD {
  short X;
  short Y;

  COORD(short Xin, short Yin){
    X = Xin;
    Y = Yin;
  }
};


class Food {
private:
  COORD pos;
public:
  Food(): pos(0,0) {genFood();};
  void genFood(){
    pos.X = random(0,8);
    pos.Y = random(0,8);
  }
  COORD getFoodPos() {
    return pos;
  }
};


class Snake {
  private:
    COORD pos;
    int len;
    char direction;
    Vector<COORD> body;
  public:
    Vector<COORD> getSnakeBody() {
      return body;
    }
    void grow(){
      len++;
    }
    COORD getPos(){
      return pos;
    }
    void moveSnake() {
      switch(direction) {
        case 'L':
          pos.Y -= 1;
          break;
        case 'R':
          pos.Y += 1;
          break;
        case 'D':
          pos.X += 1;
          break;
        case 'U':
          pos.X -= 1;
          break;       
      }

      if(pos.X < 0){
        pos.X = 7;
      }else if(pos.X > 7){
        pos.X = 0;
      }

      if(pos.Y < 0){
        pos.Y = 7;
      }else if(pos.Y > 7){
        pos.Y = 0;
      }

      body.push_back(pos);
      if(body.size() > len){
        body.remove(0);
      }
    }
    void setDirection(char d){
      direction = d;
    }
    Snake(): pos(0,0),direction('N'),len(1) {
        body.push_back(pos);
    };
    bool eatenFood(COORD foodPos) {
      if(pos.X == foodPos.X && pos.Y == foodPos.Y){
        return true;
      }
      return false;
    }
};






